@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center">
            <span class="navbar-text text-light me-2">Hello @User.Identity?.Name!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline d-flex" asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-outline-primary btn-sm">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
